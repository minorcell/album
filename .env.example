# 数据库连接串，替换为实际 MySQL 主机、库名与凭证
DATABASE_URL="mysql://album_user:album_password@localhost:3306/cp_album"

# NextAuth 用于签名 JWT 的密钥，请使用足够随机的字符串
NEXTAUTH_SECRET="your_random_secret"

# 应用对外访问地址，本地开发可保持默认
NEXTAUTH_URL="http://localhost:3000"

# 火山引擎对象存储（TOS）配置
# 请在火山控制台创建 AK/SK、Bucket 后填写
TOS_ACCESS_KEY_ID="your_ak"
TOS_SECRET_ACCESS_KEY="your_sk"
TOS_REGION="cn-beijing"
TOS_ENDPOINT="tos-cn-beijing.volces.com"
TOS_BUCKET="your_bucket_name"

# 对外访问域名（可为官方域名或自定义域名），示例：https://your-bucket.tos-cn-beijing.volces.com
NEXT_PUBLIC_TOS_BASE_URL="https://your_bucket.tos-cn-beijing.volces.com"

# 可选：自定义对象前缀，需与桶内目录保持一致
TOS_UPLOAD_PREFIX="uploads/"
TOS_THUMBNAIL_PREFIX="uploads/thumbnails/"

# 可选：品牌名称（将显示为 "<BRAND_NAME>"），默认 "ALBUM SYSTEM"
NEXT_PUBLIC_BRAND_NAME="ALBUM SYSTEM"

# 可选：页脚链接，默认如下
NEXT_PUBLIC_FOOTER_PROJECT_URL="https://github.com/minorcell/album"
NEXT_PUBLIC_FOOTER_GITHUB_URL="https://github.com/minorcell"
NEXT_PUBLIC_FOOTER_SITE_URL="https://stack.mcell.top"
NEXT_PUBLIC_FOOTER_TAGLINE="开源云空间系统，使用NextJs构建。"
